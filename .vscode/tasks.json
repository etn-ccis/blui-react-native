            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "ðŸš€ Starting BLUI Themes Library File Watcher",
                        "endsPattern": "ðŸ‘€ Theme file watcher is ready!"
                    }
                }
            ]
        }
    ]
}

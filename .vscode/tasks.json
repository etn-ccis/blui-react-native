{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Components",
            "type": "shell",
            "command": "yarn",
            "args": ["watch:components"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "ðŸš€ Starting BLUI Component Library File Watcher",
                        "endsPattern": "ðŸ‘€ File watcher is ready!"
                    }
                }
            ]
        },
        {

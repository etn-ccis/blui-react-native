{
    "name": "@brightlayer-ui/react-native-components",
    "version": "9.0.0-alpha.6",
    "author": "brightlayer-ui <brightlayer-ui@eaton.com>",
    "description": "Reusable React Native components for Brightlayer UI applications",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/etn-ccis/blui-react-native"
    },
    "keywords": [
        "react native",
        "components",
        "brightlayer-ui"
    ],
    "bugs": {
        "url": "https://github.com/etn-ccis/blui-react-native/issues"
    },
    "homepage": "https://github.com/etn-ccis/blui-react-native#readme",
    "license": "BSD-3-Clause",
    "main": "./index.js",
    "publishConfig": {
        "main": "./index.js"
    },
    "type": "module",
    "module": "./index.js",
    "types": "./index.d.ts",
    "exports": {
        ".": {
            "import": "./index.js",
            "require": "./index.js"
        }
    },
    "scripts": {
        "build": "bash ./scripts/buildComponents.sh",
        "test": "jest",
        "test:watch": "jest --watch",
        "coverage": "yarn test --coverage --watchAll=false",
        "verify-build": "tsc --noEmit",
        "publish:package": "cd dist && set npm_config_yes=true && npx -p @brightlayer-ui/publish blui-publish",
        "tag:package": "cd dist && set npm_config_yes=true && npx -p @brightlayer-ui/tag blui-tag -s -blui-react-native-component-library"
    },
    "dependencies": {
        "@brightlayer-ui/react-native-themes": "7.0.1",
        "@callstack/react-theme-provider": "^3.0.9",
        "@types/prop-types": "^15.7.15",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "color": "^4.2.3",
        "prop-types": "^15.8.1",
        "react-native-collapsible": "^1.6.2",
        "react-native-keyboard-aware-scroll-view": "^0.9.5",
        "react-native-modal": "^13.0.1",
        "react-native-reanimated": "^3.18.0"
    },
    "peerDependencies": {
        "@brightlayer-ui/react-native-vector-icons": "^2.4.0",
        "@react-native-vector-icons/material-design-icons": "^12.0.1",
        "@react-native-vector-icons/material-icons": "^12.0.1",
        "react": "^19.1.0",
        "react-native": "~0.80.0",
        "react-native-paper": "^5.14.5",
        "react-native-safe-area-context": "^5.4.1",
        "react-native-vector-icons": "^10.2.0"
    },
    "devDependencies": {
        "@brightlayer-ui/eslint-config": "^4.0.0",
        "@brightlayer-ui/icons-svg": "^1.15.0",
        "@brightlayer-ui/prettier-config": "^1.0.3",
        "@brightlayer-ui/react-native-vector-icons": "^2.4.0",
        "@faker-js/faker": "^9.8.0",
        "@react-native-vector-icons/material-design-icons": "^12.0.1",
        "@react-native-vector-icons/material-icons": "^12.0.1",
        "@react-native/babel-preset": "^0.79.3",
        "@testing-library/react-native": "^13.2.0",
        "@types/color": "^4.2.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.0.0",
        "@types/react-native-collapsible": "^0.11.0",
        "@types/react-test-renderer": "^19.1.0",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "8.34.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react": "^7.37.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^30.0.0",
        "prettier": "^3.5.3",
        "react": "^19.0.0",
        "react-native": "~0.80.0",
        "react-native-paper": "^5.14.5",
        "react-native-safe-area-context": "5.4.1",
        "react-native-svg": "^15.12.0",
        "react-native-vector-icons": "^10.2.0",
        "react-test-renderer": "^19.1.0",
        "ts-jest": "^29.3.4",
        "tsc-esm-fix": "^3.1.2",
        "typescript": "5.8.3"
    },
    "directories": {
        "doc": "../docs"
    }
}

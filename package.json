{
    "name": "blui-react-native",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/cli-templates/authentication-typescript",
        "packages/cli-templates/blank-typescript",
        "packages/cli-templates/routing-typescript",
        "examples/*",
        "docs"
    ],
    "scripts": {
        "build:all": "yarn workspaces foreach -t run build",
        "lint": "eslint \"**/**.{tsx,ts}\"",
        "lint:fix": "eslint \"**/**.{tsx,ts}\" --fix",
        "prepare": "husky",
        "prettier": "prettier '{docs,examples,packages}/**/*.{ts,tsx,js,jsx,json,css,scss,html}' --write",
        "prettier:check": "prettier '{docs,examples,packages}/**/*.{ts,tsx,js,jsx,json,css,scss,html}' --check",
        "test:all": "yarn workspaces foreach -t run test"
    },
    "devDependencies": {
        "@brightlayer-ui/eslint-config": "^4.0.0",
        "@brightlayer-ui/prettier-config": "^1.0.3",
        "@eslint/compat": "^1.2.8",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.24.0",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "5.2.0",
        "firebase-tools": "^13.35.1",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "prettier": "^3.4.2",
        "typescript-eslint": "^8.30.1"
    },
    "prettier": "@brightlayer-ui/prettier-config"
}

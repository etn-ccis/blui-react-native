{
    "plugins": [
        // ...
        "react-hooks"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "module": "ESNext",
        "target": "ES5",
        "lib": ["ESNext", "DOM"],
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src/*"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "tsconfig.json",
        "jestSetupFile.js",
        "lib/**/*",
        "docs/**/*",
        "example/**/*",
        "setup-tests.js",
        "coverage/**/*",
        "dist/**/*"
    ]
}

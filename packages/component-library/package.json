{
    "name": "@brightlayer-ui/react-native-components",
    "version": "8.0.5-alpha.1",
    "author": "brightlayer-ui <brightlayer-ui@eaton.com>",
    "description": "Reusable React Native components for Brightlayer UI applications",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/etn-ccis/blui-react-native"
    },
    "keywords": [
        "react native",
        "components",
        "brightlayer-ui"
    ],
    "bugs": {
        "url": "https://github.com/etn-ccis/blui-react-native/issues"
    },
    "homepage": "https://github.com/etn-ccis/blui-react-native#readme",
    "license": "BSD-3-Clause",
    "main": "./dist/index.js",
    "publishConfig": {
        "main": "./index.js"
    },
    "type": "module",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "bash ./scripts/buildComponents.sh",
        "test": "jest",
        "test:watch": "jest --watch",
        "coverage": "yarn test --coverage --watchAll=false",
        "verify-build": "tsc --noEmit",
        "publish:package": "cd dist && set npm_config_yes=true && npx -p @brightlayer-ui/publish blui-publish",
        "tag:package": "cd dist && set npm_config_yes=true && npx -p @brightlayer-ui/tag blui-tag -s -blui-react-native-component-library"
    },
    "dependencies": {
        "@brightlayer-ui/react-native-themes": "7.0.1",
        "color": "^4.2.3",
        "react-native-collapsible": "^1.6.2",
        "react-native-keyboard-aware-scroll-view": "^0.9.5",
        "react-native-modal": "^13.0.1",
        "react-native-reanimated": "^3.17.4"
    },
    "peerDependencies": {
        "@brightlayer-ui/react-native-vector-icons": "^2.0.0",
        "react": "^17.0.0 || ^18.0.0",
        "react-native": "0.68.0 || 0.69.0 || 0.76.7",
        "react-native-paper": "^5.0.0",
        "react-native-safe-area-context": "^5.3.0",
        "react-native-vector-icons": "^9.0.0"
    },
    "devDependencies": {
        "@brightlayer-ui/eslint-config": "^4.0.0",
        "@brightlayer-ui/icons-svg": "^1.15.0",
        "@brightlayer-ui/prettier-config": "^1.0.3",
        "@brightlayer-ui/react-native-vector-icons": "^2.4.0",
        "@faker-js/faker": "^9.7.0",
        "@react-native/babel-preset": "^0.79.1",
        "@testing-library/react-native": "^13.2.0",
        "@types/color": "^4.2.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "@types/react-native-collapsible": "^0.11.0",
        "@types/react-native-vector-icons": "^6.4.18",
        "@types/react-test-renderer": "^18.3.1",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "react": "^18.3.1",
        "react-native": "0.76.7",
        "react-native-paper": "^5.13.3",
        "react-native-safe-area-context": "^5.4.0",
        "react-native-svg": "^15.11.2",
        "react-native-vector-icons": "^9.2.0",
        "react-test-renderer": "^18.3.1",
        "ts-jest": "^29.3.2",
        "typescript": "5.8.3"
    },
    "directories": {
        "doc": "../docs"
    }
}

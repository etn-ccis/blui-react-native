{
    "parser": "@typescript-eslint/parser",
    "extends": ["@brightlayer-ui/eslint-config/tsx"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true,
        "jest": true
    },
    "rules": {
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": "variable", // Applies to variables
                "format": ["camelCase", "PascalCase", "UPPER_CASE"], // Allowed formats
                "leadingUnderscore": "allow", // Optional: Allow leading underscores
                "trailingUnderscore": "allow" // Optional: Allow trailing underscores
            }
        ]
    }
}

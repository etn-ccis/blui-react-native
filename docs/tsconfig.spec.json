{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "types": ["vitest/globals", "vitest/importMeta", "vite/client", "node", "vitest"],
        "composite": true,
        "declaration": true
    },
    "include": [
        "vite.config.ts",
        "vitest.config.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx",
        "src/**/*.d.ts"
    ]
}

{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist/out-tsc",
        "composite": true,
        "declaration": true,
        "noEmit": false,
        "types": ["node", "vite/client"]
    },
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.tsx",
        "src/**/*.test.tsx",
        "src/**/*.spec.js",
        "src/**/*.test.js",
        "src/**/*.spec.jsx",
        "src/**/*.test.jsx"
    ],
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx", "src/**/*.mdx"]
}
